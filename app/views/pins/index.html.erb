<% if user_signed_in? %>
<% if params[:query].blank? %>
<h2>Latest submissions</h2>
<% else %>
<h1>Search result</h1>
<% end %>

<%= will_paginate @presenter.all_pins unless @presenter.all_pins.nil? %>
  <div id="pins" class="js-masonry" data-masonry-options='{ "columnWidth": 200, "itemSelector": ".box" }'>
    <% @presenter.all_pins.each do |pin| %>
      <%= render :partial => 'pins/pin', :locals => {:pin => pin, :safe_mode => @presenter.safe_mode} %>
    <% end %>
  <br clear="both" />
  </div>
<%= will_paginate @presenter.all_pins unless @presenter.all_pins.nil? %>
<br clear="both" />


<% else %>
<div class="row">
	<div class="span4">
		<h2>Do you have questions about transitioning?</h2>
	</div>
	<div class="span4">
		<h2>We have answers.</h2>
	</div>
	<div class="span4">
  <h2>See trans* patients like you.</h2>
</div>
</div>
<div class="row">
	<div class="span4">
	<%= image_tag(image_path("dysphoria2.png"), :size => "400x400", :alt => "dysphoria", :padding => "10") %>
	</div>
	<div class="span4">
	<%= image_tag(image_path("dysphoria3.png"), :size => "400x400", :alt => "key", :padding => "10") %>
	</div>
	<div class="span4">
		<%= link_to (image_tag(image_path("register.png"), :size => "400x400", :alt => "key", :padding => "10")), register_path %>

</div>
</div>
<br clear="both" />
<% end %>