<% if pin.pin_images.present? %>
<div class="box"><%= link_to (image_tag pin.pin_images.last.photo(:medium)), pin %>
	<p class="description">
<%= pin.procedure %> by <strong> Dr. <%= pin.surgeon %></strong>
<br> <%= @str = "<br><b>New Comment: </b>"
	@str.html_safe + pin.has_new_comments(current_user).last.body unless pin.has_new_comments(current_user).last.nil? %>
<% if current_user == pin.user || current_user.admin? %> | <%= link_to 'Edit', edit_pin_path(pin) %>
| <%= link_to 'Remove', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</p>
</div>
<% end %>